@using DOANPM_TH.Models.ViewModel
@{
    var listlaptop = ViewData["listlaptop"] as IEnumerable<LatopsViewModel>;
    Layout = "~/Views/Shared/Shopping.cshtml";
}

<div class="content-top" margin-top="0px">
    <div class="grid-in" align="center">
        <div class="container" align="center">
            <style>
                .cell {
                    display: inline-block;
                    vertical-align: top;
                    position: relative;
                    width: 20%;
                    height: 315px;
                    border: 1px solid #ececec;
                    margin: -1px -3px 0 0;
                    float: left;
                }

                .igure {
                    display: block;
                    -webkit-margin-before: 1em;
                    -webkit-margin-after: 1em;
                    -webkit-margin-start: 40px;
                    -webkit-margin-end: 40px;
                }

                .buy {
                    font-size: 14px;
                    color: #fff;
                    padding: 5px 14px;
                    text-transform: uppercase;
                    position: absolute;
                    bottom: 5px;
                    right: 5px;
                    height: auto;
                    border: 1px solid #d97f00;
                    border-radius: 3px;
                    background: #f89406;
                    background: -webkit-gradient(linear,0% 0%,0% 100%,from(#f76b1c),to(#f89406));
                    background: -webkit-linear-gradient(top,#f89406,#f76b1c);
                    background: -moz-linear-gradient(top,#f89406,#f76b1c);
                    background: -ms-linear-gradient(top,#f89406,#f76b1c);
                    background: -o-linear-gradient(top,#f89406,#f76b1c);
                }

                    .buy:hover {
                        text-decoration: none;
                    }

                .km {
                    display: block;
                    font-size: 12px;
                    color: #797979;
                    margin: 0 9px;
                    clear: both;
                    float: none;
                    width: 64%;
                    height: auto;
                    border: 0;
                }

                .strong {
                    float: left;
                    font-size: 14px;
                    color: #ff0000;
                    margin: 0 9px 5px;
                }
            </style>


            <div class="container-fluid pt-5">
                <div class="text-center mb-4">          
                </div>
                @*  Laptops *@

                <div class="row px-xl-5 pb-3">
                    @foreach (var item in listlaptop)
                    {
                        <div class="col-md-4 grid-top" style="width:20%;height:320px;display: inline-block;vertical-align: top;
                        position: relative ;border: 1px solid #ececec;
                        margin: -1px -3px 0 0;
                        float: left; ">
                            <a href="~/Th%E1%BB%8Bt%20Tr%C3%A2u%20G%C3%A1c%20B%E1%BA%BFp-7" class="b-link-stripe b-animate-go  thickbox">
                                <img class="img-responsive" src="~/Content/HinhAnhSP/@item.Image" alt="" style="height: 150px; width:150px; margin-top:20px;">
                                <div class="b-wrapper">
                                </div>

                            </a><p><a style="margin-bottom:auto;">@item.LaptopName</a></p>
                            <strong style="font-size: 20px;color:#ff0000;margin: 0 9px 5px;">Giá Tiền:@item.Price</strong>
                            <div class="km" style="display: block; font-size: 12px; color: #797979; margin: 0 9px; clear: both; float: none; width: 64%; height: auto; border: 0;">  
                                <a class="btn btn-primary" asp-controller="HomeCustomer" asp-action="LaptopDetails" asp-route-laptopId="@item.LaptopsID">
                                    Chi Tiết
                                    <i class="far fa-eye"></i>
                                </a>
                            </div>
                           @* <a data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#divGioHang" href="~/GioHang/ThemGioHangAjax?MaSP=7&amp;strURL=http%3A%2F%2Flocalhost%3A9328%2FHome%2FIndex">Mua Sản Phẩm</a>*@
                        </div>
                    }
                </div>
            </div>
