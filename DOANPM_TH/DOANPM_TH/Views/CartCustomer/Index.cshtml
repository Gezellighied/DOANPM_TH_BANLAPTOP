﻿@{
	Layout = "~/Views/Shared/Shopping.cshtml";
	var carts = ViewBag.carts;
	int total = 0;
}

<!-- Cart Start -->
<div class="container-fluid pt-5">
	<div class="row px-xl-5">
		<div class="col-lg-8 table-responsive mb-5">
			<table class="table table-bordered text-center mb-0">
				<thead class="bg-secondary text-dark">
					<tr>
						@*<th>Chọn</th>*@
						<th>Hình ảnh</th>
						<th>Sản phẩm</th>
						<th>Giá</th>
						<th>Số lượng</th>
						<th>Tổng tiền</th>
						<th>Xóa</th>
					</tr>
				</thead>
				<tbody class="align-middle">
					@foreach (var item in carts)
					{
						total += @item.Laptop.Price * @item.Quantity;

						<tr>
							@*<td class="align-middle">
						<input class="choose-cart" value="@item.CartId" type="checkbox" value="" style="width: 30px; height: 30px"/>
						</td>*@
							<td class="align-middle"><img src="~/Content//HinhAnhSP/@item.Laptop.Image" alt="" style="width: 80px;"></td>
							<td class="align-middle" style="text-align: left">@item.Laptop.LaptopName</td>
							<td id="item-price" class="align-middle">@item.Laptop.Price</td>
							<td class="align-middle">
								<div class="input-group quantity mx-auto" style="width: 100px;">
									<div class="input-group-btn">
										<button class="btn btn-sm btn-primary btn-minus" data="@item.CartID">
											@* trừ *@
											<i class="fa fa-minus"></i>
										</button>
									</div>
									<input type="text" class="form-control form-control-sm bg-secondary text-center" value="@item.Quantity">
									<div class="input-group-btn">
										<button class="btn btn-sm btn-primary btn-plus" data="@item.CartID">
											@* cộng *@
											<i class="fa fa-plus"></i>
										</button>
									</div>
								</div>
							</td>
							<td class="align-middle" id="total-@item.CartID">@(item.Laptop.Price * item.Quantity)</td>
							<td class="align-middle">
								<a asp-controller="CartCustomer" asp-action="Delete" asp-route-cartId="@item.CartID" class="btn btn-sm btn-primary">
									<i class="fa fa-times"></i>
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		<div class="col-lg-4">
			<!-- Thanh toán -->
			<div class="card border-secondary mb-5">
				<div class="card-header bg-secondary border-0">
					<h4 class="font-weight-semi-bold m-0">Tóm tắt giỏ hàng</h4>
				</div>
				<div class="card-body">
					<div class="d-flex justify-content-between mb-3 pt-1">
						<h6 class="font-weight-medium">Tổng phụ</h6>
						<h6 class="font-weight-medium">$@total</h6>
					</div>
				</div>
				<div class="card-footer border-secondary bg-transparent">
					<div class="d-flex justify-content-between mt-2">
						<h5 class="font-weight-bold">Tổng tiền</h5>
						<h5 class="font-weight-bold">$@total</h5>
					</div>
					<a asp-controller="CartCustomer" asp-action="Checkout" class="btn btn-block btn-primary my-3 py-3" id="checkout-btn">Thanh toán</a>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="/js/Cart.js"></script>
<!-- Cart End -->
