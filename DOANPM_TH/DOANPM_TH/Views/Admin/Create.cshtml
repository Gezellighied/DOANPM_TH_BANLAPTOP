@using DOANPM_TH.Models.ViewModel
@{
	Layout = "~/Views/Shared/_AdminLayot.cshtml";
}
@model LatopsViewModel

<!-- Content Header (Page header) -->
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Laptop Edit</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-controller="Example" asp-action="ExViewBag">Home</a></li>
					<li class="breadcrumb-item active">Laptop Edit</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<form method="post" asp-controller="Admin" asp-action="Create" class="content" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-12">
			<div class="card card-primary">
				<div class="card-header">
					<h3 class="card-title">General</h3>

					<div class="card-tools">
						<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
							<i class="fas fa-minus"></i>
						</button>
					</div>
				</div>

				<div class="card-body">
					<div class="form-group">
						<label for="inputName" asp-for="@Model.LaptopName"></label>
						<input type="text" id="inputName" class="form-control" asp-for="LaptopName">
						<span asp-validation-for="@Model.LaptopName" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="inputDescription">Brand</label>
						<textarea id="inputDescription" class="form-control" asp-for="Brand" rows="3"></textarea>
						<span asp-validation-for="@Model.Brand" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="inputName">ScreenSize</label>
						<input type="text" id="inputName" class="form-control" asp-for="ScreenSize">
						<span asp-validation-for="@Model.ScreenSize" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label for="inputName">Processor</label>
						<input type="text" id="inputName" class="form-control" asp-for="Processor">
						<span asp-validation-for="@Model.Processor" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label for="inputName">Ram</label>
						<input type="text" id="inputName" class="form-control" asp-for="Ram">
						<span asp-validation-for="@Model.Ram" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label for="inputName">Price</label>
						<input type="number" id="inputName" class="form-control" asp-for="Price">
						<span asp-validation-for="@Model.Price" class="text-danger"></span>
					</div>
					@*<div class="form-group">
						<label for="inputStatus">Product Type</label>
						<select id="ProductTypeID" class="form-control custom-select" asp-for="ProductTypeID">
							<option>----Lựa chọn loại sản phẩm----</option>
							@foreach (var item in productTypes)
							{
								<option value="@item.ProductTypeId">@item.Name</option>
							}
						</select>
						<span asp-validation-for="@Model.ProductTypeID" class="text-danger"></span>
					</div>*@

					@*<div class="form-group">
						<label for="inputStatus">Provider</label>
						<select id="ProviderID" class="form-control custom-select" asp-for="ProviderID">
							<option>----Lựa chọn nhà cung cấp----</option>
							@foreach (var item in providers)
							{
								<option value="@item.ProviderId">@item.ProviderName</option>
							}
						</select>
						<span asp-validation-for="@Model.ProviderID" class="text-danger"></span>
					</div>*@

					<div class="form-group">
						<label for="inputClientCompany">Image</label> <br />
						<input type="file" id="inputClientCompanyFile" accept="image/*" asp-for="ImageFile"> <br />
						<span asp-validation-for="@Model.Image" class="text-danger"></span>
						<img id="previewImage" style="display: none; width: 300px; height: 300px; border: 1px solid #E9ECEF" alt="" />
					</div>
				</div>
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
			<input type="submit" value="Save Changes" class="btn btn-success float-right">
		</div>
	</div>
</form>
<!-- /.content -->