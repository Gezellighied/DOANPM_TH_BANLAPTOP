@{
	Layout = "~/Views/Shared/_AdminLayot.cshtml";
	var laptopDetails = ViewBag.laptopDetails;
}

<!-- Content Header (Page header) -->
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Laptop Detail</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-controller="Example" asp-action="ExViewBag">Home</a></li>
					<li class="breadcrumb-item active">Laptop Detail</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

	<!-- Default box -->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">Laptop Detail</h3>

			<div class="card-tools">
				<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
					<i class="fas fa-minus"></i>
				</button>
			</div>
		</div>
		<div class="card-body">
			<div class="ex-info-main">
				<div class="ex-info-box">
					<span class="ex-info-title">ID</span>
					<span class="ex-info-desc">@laptopDetails.LaptopID</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">Name</span>
					<span class="ex-info-desc">@laptopDetails.LaptopName</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">Brand</span>
					<span class="ex-info-desc">@laptopDetails.Brand</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">ScreenSize</span>
					<span class="ex-info-desc">@laptopDetails.ScreenSize</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">Ram</span>
					<span class="ex-info-desc">@laptopDetails.Ram</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">Processor</span>
					<span class="ex-info-desc">@laptopDetails.Processor</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">Price</span>
					<span class="ex-info-desc">@laptopDetails.Price</span>
				</div>

				<div class="ex-info-box">
					<span class="ex-info-title">Image</span>
					<img src="~/Content/HinhAnhSP/@laptopDetails.Image" style="width:150px; height:150px" />
				</div>
			</div>

			<div class="ex-info-container-btn">
				<a class="ex-info-btn" style="margin-right: 18px;" asp-controller="Admin" asp-action="Edit" asp-route-laptopId="@laptopDetails.LaptopID">Edit</a>
				<a class="ex-info-btn" asp-controller="Admin" asp-action="Index">Come back</a>
			</div>
		</div>
		<!-- /.card-body -->
	</div>
	<!-- /.card -->

</section>
<!-- /.content -->